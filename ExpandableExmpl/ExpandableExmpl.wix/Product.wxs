<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

<Product Id="*" UpgradeCode="5BDF0A6F-7E96-43E7-ACE5-B3336710FA0C" Language="1033"
                  Manufacturer="Bob -- K6RWY" Name="ExpandableExmpl"
                  Version="!(bind.fileVersion.ExpandableExmpl.cmp)"
                  >

  <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine"
                      Manufacturer="Bob -- K6RWY" Description="Installs ExpandableExmpl"
                      Comments="Copyright (c) Bob -- K6RWY"
                      />

  <MajorUpgrade Schedule="afterInstallInitialize"
                                AllowDowngrades="no"   IgnoreRemoveFailure="no"   AllowSameVersionUpgrades="no"
                                DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

  <MediaTemplate EmbedCab="yes" />

  <UI Id="My_InstallDir.ui">
    <UIRef Id="WixUI_InstallDir" />
    <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="InstallDirDlg">
      NOT Installed
    </Publish>
    <Publish Dialog="InstallDirDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2">
      1
    </Publish>
  </UI>

  <WixVariable Id="WixUIDialogBmp" Value="C:\Program Files (x86)\WixApp\dialog.bmp"/>
  <WixVariable Id="WixUIBannerBmp" Value="C:\Program Files (x86)\WixApp\banner.bmp"/>

  <Icon     Id="ExpandableExmpl01Icon.ico"
                            SourceFile="$(var.SolutionDir)..\ExpandableExmpl.prj\res\ExpandableExmpl.ico"/>
  <Property Id="ARPPRODUCTICON"  Value="ExpandableExmpl01Icon.ico" />

  <Feature Id="ProductFeatures" Title="Main Product" Level="1" >
    <ComponentGroupRef Id="ExpandableExmpl.ftr"/>
    <ComponentGroupRef Id="Uninstall_ExpandableExmpl.ftr"/>
  </Feature>
</Product>

<Fragment>
<ComponentGroup Id="ExpandableExmpl.ftr">
  <ComponentRef Id="ExpandableExmpl.cmp"/>
  <ComponentRef Id="Help.cmp"/>
</ComponentGroup>
<ComponentGroup Id="Uninstall_ExpandableExmpl.ftr">
  <ComponentRef Id="Uninstall_ExpandableExmpl.cmp"/>
</ComponentGroup>
</Fragment>

<!--Directory structure-->
<Fragment>
  <Directory Id="TARGETDIR" Name="SourceDir">
    <Directory Id="ProgramFilesFolder">
      <Directory Id="ExpandableExmpl.pff" Name="ExpandableExmpl" />
    </Directory>

    <Directory Id="ProgramMenuFolder">
      <Directory Id="ExpandableExmpl.pmf" Name="ExpandableExmpl" />
    </Directory>

    <Directory Id="DesktopFolder" />

  </Directory>

  <Property Id="ApplicationFolderName" Value="ExpandableExmpl" />
  <Property Id="WIXUI_INSTALLDIR"      Value="ExpandableExmpl.pff"/>
  <Property Id="WixAppFolder"          Value="WixPerMachineFolder" />
</Fragment>

<Fragment>

  <Component Id="ExpandableExmpl.cmp"  Guid="F19FCF6C-BAA6-4231-B040-29DA7341EE13"
                                                                          Directory="ExpandableExmpl.pff">
    <File Id="ExpandableExmpl.cmp" Source="$(var.SolutionDir)..\Release\ExpandableExmpl.exe" KeyPath="yes"/>

    <Shortcut Id               = "ExpandableExmpl.shc"
              Name             = "ExpandableExmpl"
              Advertise        = "yes"
              Directory        = "ExpandableExmpl.pmf"
              WorkingDirectory = "ExpandableExmpl.pff"
              Icon             = "ExpandableExmpl01Icon.ico"
              />

    <Shortcut Id               = "ExpandableExmpl.dsk"
              Name             = "ExpandableExmpl"
              Advertise        = "yes"
              Directory        = "DesktopFolder"
              WorkingDirectory = "ExpandableExmpl.pff"
              Icon             = "ExpandableExmpl01Icon.ico"
              />
    <Condition>
      <![CDATA[Installed OR VersionNT >= 601]]>
    </Condition>
  </Component>

  <Component Id="Help.cmp"  Guid="B72843BE-B264-4D70-B584-780B6696CDAC" Directory="ExpandableExmpl.pff">
    <File Id="Help.cmp" Source="$(var.SolutionDir)..\Release\ExpandableExmpl.chm" KeyPath="yes"/>
  </Component>

</Fragment>

<Fragment>

  <Component Id="Uninstall_ExpandableExmpl.cmp"
                              Guid="DB19A545-43F7-4BC4-AE48-F69DEB6FC701" Directory="ExpandableExmpl.pmf">

    <Shortcut Id               = "UninstallExpandableExmpl.shc"
              Name             = "Uninstall ExpandableExmpl"
              Description      = "Uninstalls ExpandableExmpl"
              Target           = "[System64Folder]msiexec.exe"
              Arguments        = "/x [ProductCode]"
              Icon             = "ExpandableExmpl01Icon.ico"
              />
    <RemoveFolder Id="ExpandableExmpl.uni" Directory="ExpandableExmpl.pmf" On="uninstall"/>
    <RegistryValue Root="HKCU" Key="Software\Uninstall_ExpandableExmpl.cmp" Name="installed"
                   Type="integer" Value="1" KeyPath="yes"/>
  </Component>

</Fragment>

</Wix>
